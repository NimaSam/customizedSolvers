FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/solid";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 500;

boundaryField
{
    wall-1
    {
        type            symmetryPlane;
    }
    wall-2
    {
        type            symmetryPlane;
    }
    down
    {
        type            fixedValue;
        value           uniform 505;
    }
    frontAndBack
    {
        type            empty;
    }
    solid_to_fluid
    {
        type            solidWallMixedTemperatureCoupled;
        value           uniform 500;
        neighbourFieldName T;
        K               K;
    }
}


